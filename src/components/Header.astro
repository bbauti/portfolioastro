<script>
  import gsap from "gsap";
  import SplitType from 'split-type';
  import { CSSPlugin } from "gsap/CSSPlugin";

  gsap.registerPlugin(CSSPlugin);

  document.addEventListener('DOMContentLoaded', () => {
    new SplitType('#heading', { types: 'words' });

    document.querySelector(".frontend > div")?.classList.add("frontend");

    gsap.fromTo('#heading .word',
      { y: '100%', opacity: 0, filter: 'blur(10px)' },
      { y: '0%', opacity: 1, filter: 'blur(0px)', duration: 0.7, ease: 'power4.out', stagger: 0.1 }
    ).then(() => {
      document.querySelector(".highlight")?.classList.add("animate");
    });

    // Remove the class that hides the content
    document.getElementById('heading')?.classList.remove('[&>*]:opacity-0');
  });
</script>

