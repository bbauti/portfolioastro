<script>
  document.addEventListener("DOMContentLoaded", () => {
    const preElement = document.querySelector("pre");
    const classes = '[counter-increment:line] before:[content:counter(line)] before:inline-block before:w-[1rem] before:mr-[1.5rem] before:text-right before:text-gray-500';
    const lines = preElement!.innerText
      .trim()
      .split("\n")
      .map((line) => `<span class="${classes}">${line.trim()}</span>`)
      .join("\n");
    preElement!.innerHTML = lines;
  });
</script>

