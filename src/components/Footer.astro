<style>
  .gradient {
    pointer-events: none;
    background: linear-gradient(180deg, rgba(228, 75, 233, 0.089) 0%, rgba(230, 230, 230, 0) 100%);
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 200px;
  }

  .gradient-bottom {
    pointer-events: none;
    background: linear-gradient(0deg, rgba(255, 255, 255, 0.089) 0%, rgba(230, 230, 230, 0) 100%);
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 200px;
  }

  .wrapper {
    mask-image: radial-gradient(ellipse at 0% 0%, black 40%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse at 0% 0%, black 40%, transparent 70%);
  }

  .stripes {
    transform: translate3d(0, 0, 0);
    --bg: currentcolor;
    --duration: 60s;
    --stripes: repeating-linear-gradient(
      60deg,
      var(--bg) 0%,
      var(--bg) 7%,
      transparent 10%,
      transparent 12%,
      var(--bg) 16%
    );
    --rainbow: repeating-linear-gradient(
      60deg,
      #f5f5f5 10%,
      #f7e017 25%,
      #d946ef 50%,
      #8b5cf6 75%,
      #f5f5f5 90%
    );
    background-image: var(--stripes), var(--rainbow);
    background-size: 120%, 200%;
    background-position: 50% 50%, 50% 50%;
  }

  .animate-god-rays {
    background-image: var(--stripes), var(--rainbow);
    background-size: 100%, 100%;
    background-position: 50% 50%;
    animation: god-rays var(--duration) cubic-bezier(.15,0,.85,1) infinite alternate;
  }

  @keyframes god-rays {
    0% {
      transform: translateX(-50%)
    }
    to {
      transform: translateX(0)
    }
  }
</style>